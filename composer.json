{
    "name": "merchantwarrior/module-payment",
    "description": "Official Magento2 Plugin to connect to Payment Service Provider Merchant Warrior.",
    "type": "magento2-module",
    "version": "0.1.0",
    "license": "MIT",
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],
    "require": {
        "magento/framework": ">=101.0.8 <102 || >=102.0.1",
        "magento/module-vault": "101.*",
        "magento/module-payment": "100.1.*",
        "magento/module-checkout": "100.1.*",
        "magento/module-sales": "100.1.*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.5.0",
        "magento/magento-coding-standard": "*",
        "squizlabs/php_codesniffer": "~3.5.3"
    },
    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "Merchantwarrior\\Payment\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Merchantwarrior\\Payment\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpunit -c Test/phpunit.xml"
        ],
        "post-install-cmd": [
            "([ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths ../../magento/magento-coding-standard/)"
        ],
        "post-update-cmd": [
            "([ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths ../../magento/magento-coding-standard/)"
        ]
    }
}
