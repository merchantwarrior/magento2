<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="MerchantWarrior\Payment\Api\Direct\RefundCardInterface"
                type="MerchantWarrior\Payment\Model\Api\Direct\RefundCard" />
    <preference for="MerchantWarrior\Payment\Api\Direct\ProcessVoidInterface"
                type="MerchantWarrior\Payment\Model\Api\Direct\ProcessVoid" />
    <preference for="MerchantWarrior\Payment\Api\Direct\ProcessAuthInterface"
                type="MerchantWarrior\Payment\Model\Api\Direct\ProcessAuth" />
    <preference for="MerchantWarrior\Payment\Api\Payframe\ProcessCardInterface"
                type="MerchantWarrior\Payment\Model\Api\Payframe\ProcessCard" />
    <preference for="MerchantWarrior\Payment\Api\Payment\Process\CardInterface"
                type="MerchantWarrior\Payment\Model\Payment\Process\Card" />

    <!-- Payment Method Facade configuration -->
    <virtualType name="MerchantWarriorPayFrameFacade" type="MerchantWarrior\Payment\Model\PaymentMethod">
        <arguments>
            <argument name="code" xsi:type="const">MerchantWarrior\Payment\Model\PaymentMethod::METHOD_CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Magento\Payment\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">MerchantWarriorPaymentPayFrameValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">MerchantWarriorPaymentPayFrameCommandPool</argument>
            <argument name="logger" xsi:type="object">MerchantWarrior\Payment\Logger\MerchantWarriorLogger</argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="MerchantWarriorPaymentPayFrameValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">MerchantWarriorPaymentPayFrameConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="MerchantWarriorPaymentPayFrameConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">MerchantWarriorPaymentPayFrameConfig</argument>
        </arguments>
    </virtualType>
    <virtualType name="MerchantWarriorPaymentPayFrameConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">MerchantWarrior\Payment\Model\PaymentMethod::METHOD_CODE</argument>
        </arguments>
    </virtualType>

    <!-- Commands infrastructure -->
    <virtualType name="MerchantWarriorPaymentPayFrameCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">MerchantWarriorPaymentPayFrameAuthorizeCommand</item>
                <item name="capture" xsi:type="string">MerchantWarriorPaymentCaptureCommand</item>
                <item name="void" xsi:type="string">MerchantWarriorPaymentCancelCommand</item>
                <item name="refund" xsi:type="string">MerchantWarriorPaymentRefundCommand</item>
                <item name="cancel" xsi:type="string">MerchantWarriorPaymentCancelCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Checkout Response validator -->
    <virtualType name="CheckoutResponseValidator" type="MerchantWarrior\Payment\Gateway\Validator\CheckoutResponseValidator">
        <arguments>
            <argument name="loggerInterface" xsi:type="object">MerchantWarrior\Payment\Logger\MerchantWarriorLogger</argument>
        </arguments>
    </virtualType>

    <!-- Authorization command  -->
    <virtualType name="MerchantWarriorPaymentPayFrameAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">MerchantWarriorPaymentPayFrameAuthorizeRequest</argument>
            <argument name="transferFactory" xsi:type="object">MerchantWarrior\Payment\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">MerchantWarrior\Payment\Gateway\Http\Client\TransactionPayment</argument>
            <argument name="validator" xsi:type="object">CheckoutResponseValidator</argument>
            <argument name="handler" xsi:type="object">MerchantWarriorPayFrameResponseHandler</argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request -->
    <virtualType name="MerchantWarriorPaymentPayFrameAuthorizeRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="customer" xsi:type="string">MerchantWarrior\Payment\Gateway\Request\CustomerDataBuilder</item>
                <item name="customerip" xsi:type="string">MerchantWarrior\Payment\Gateway\Request\CustomerIpDataBuilder</item>
                <item name="address" xsi:type="string">MerchantWarrior\Payment\Gateway\Request\AddressDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="MerchantWarriorPayFrameResponseHandler" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="payment_details" xsi:type="string">MerchantWarrior\Payment\Gateway\Response\PaymentDetailsHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Capture Request -->
    <virtualType name="MerchantWarriorPaymentCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="capture" xsi:type="string">MerchantWarrior\Payment\Gateway\Request\CaptureDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Refund Request -->
    <virtualType name="MerchantWarriorPaymentRefundCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="refund" xsi:type="string">MerchantWarrior\Payment\Gateway\Request\RefundDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Cancel Request -->
    <virtualType name="MerchantWarriorPaymentCancelCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="refund" xsi:type="string">MerchantWarrior\Payment\Gateway\Request\CancelDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="MerchantWarrior\Payment\Logger\MerchantWarriorLogger">
        <arguments>
            <argument name="name" xsi:type="string">MerchantWarriorLogger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="merchantWarriorDebug" xsi:type="object">MerchantWarrior\Payment\Logger\Handler\MerchantWarriorDebug</item>
                <item name="merchantWarriorNotification" xsi:type="object">MerchantWarrior\Payment\Logger\Handler\MerchantWarriorNotification</item>
                <item name="merchantWarriorResult" xsi:type="object">MerchantWarrior\Payment\Logger\Handler\MerchantWarriorResult</item>
                <item name="merchantWarriorCronjob" xsi:type="object">MerchantWarrior\Payment\Logger\Handler\MerchantWarriorCronjob</item>
                <item name="merchantWarriorInfo" xsi:type="object">MerchantWarrior\Payment\Logger\Handler\MerchantWarriorInfo</item>
                <item name="merchantWarriorError" xsi:type="object">MerchantWarrior\Payment\Logger\Handler\MerchantWarriorError</item>
                <item name="merchantWarriorWarning" xsi:type="object">MerchantWarrior\Payment\Logger\Handler\MerchantWarriorWarning</item>
                <item name="system" xsi:type="object">Magento\Framework\Logger\Handler\System</item>
                <item name="debug" xsi:type="object">Magento\Framework\Logger\Handler\Debug</item>
            </argument>
        </arguments>
    </type>
</config>
