<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="merchant_warrior_directapi" translate="label" type="text" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="1">
        <label><![CDATA[Direct API]]></label>
        <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>
        <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enabled</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/merchant_warrior/active</config_path>
        </field>
        <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Title</label>
            <config_path>payment/merchant_warrior/title</config_path>
        </field>
        <field id="sort_order" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Sort Order</label>
            <frontend_class>validate-number</frontend_class>
            <config_path>payment/merchant_warrior/sort_order</config_path>
        </field>
        <field id="payment_action" type="select" showInDefault="1" showInWebsite="1" sortOrder="32" translate="label">
            <label>Payment Action</label>
            <source_model>MerchantWarrior\Payment\Model\Config\Source\PaymentAction</source_model>
            <config_path>payment/merchant_warrior/payment_action</config_path>
        </field>
        <field id="order_status" translate="label" type="select" sortOrder="34" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
            <label>New Order Status</label>
            <source_model>Magento\Sales\Model\Config\Source\Order\Status\Processing</source_model>
            <config_path>payment/merchant_warrior/order_status</config_path>
        </field>
        <field id="cctypes" translate="label" type="multiselect" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Accepted Cards</label>
            <source_model>MerchantWarrior\Payment\Model\Config\Source\MerchantWarriorCcType</source_model>
            <config_path>payment/merchant_warrior/cctypes</config_path>
        </field>
        <group id="merchant_warrior_directapi_country_specific" translate="label" showInDefault="1" showInWebsite="1" sortOrder="50">
            <label>Country Specific Settings</label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>
            <field id="allowspecific" translate="label" type="allowspecific" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Payment from Applicable Countries</label>
                <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
                <config_path>payment/merchant_warrior/allowspecific</config_path>
            </field>
            <field id="specificcountry" translate="label" type="multiselect" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Payment from Specific Countries</label>
                <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                <can_be_empty>1</can_be_empty>
                <config_path>payment/merchant_warrior/specificcountry</config_path>
            </field>
        </group>
    </group>
</include>
